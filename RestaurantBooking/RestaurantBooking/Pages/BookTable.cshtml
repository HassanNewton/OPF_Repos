@page
@model RestaurantBooking.Pages.BookTableModel

<h1>Boka bord</h1>

<form method="post">
    <div>
        <label>Namn</label><br />
        <input asp-for="Booking.Name" />
        <span asp-validation-for="Booking.Name"></span>
    </div>

    <div>
        <label>Email</label><br />
        <input asp-for="Booking.Email" />
        <span asp-validation-for="Booking.Email"></span>
    </div>

    <div>
        <label>Antal gäster</label><br />
        <input type="number" asp-for="Booking.Guests" />
        <span asp-validation-for="Booking.Guests"></span>
    </div>

    <div>
        <label>Datum</label><br />
        <input type="date" asp-for="Booking.Date" />
        <span asp-validation-for="Booking.Date"></span>
    </div>

    <button type="submit">Boka</button>
</form>




